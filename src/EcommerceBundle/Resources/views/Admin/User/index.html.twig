{% extends 'EcommerceBundle:Admin:layoutAdmin.html.twig' %}
{% block body %}
    <h1>Users list</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('adminUser_show', { 'id': user.id }) }}"><i class="fas fa-book"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
