{% extends 'EcommerceBundle:Admin:layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>

                <td>{{ category.name }}</td>
                <td>

                            <a href="{{ path('adminCategory_show', { 'id': category.id }) }}"><i class="fas fa-book"></i></a>

                            <a href="{{ path('adminCategory_edit', { 'id': category.id }) }}"><i class="far fa-edit"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminCategory_new') }}">Créer une nouvelle catégorie</a>
        </li>
    </ul>
{% endblock %}
